<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height_site">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Đăng ký tài khoản</h2>
                        <ul>
                            <li>
                                <a href="index.html">Trang chủ <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Đăng ký</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100_register">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 pt-10 pt-lg-0">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="login-form_site">
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label asp-for="Input.FullName"></label>
                                    <input asp-for="Input.FullName" placeholder="Nhập họ và tên . . .">
                                    <span asp-validation-for="Input.FullName" class="text-danger val_form"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Input.PhoneNumber"></label>
                                    <input asp-for="Input.PhoneNumber" placeholder="Nhập số điệnt thoại . . .">
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger val_form"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Input.UserName"></label>
                                    <input asp-for="Input.UserName" placeholder="Nhập tên tài khoản . . .">
                                    <span asp-validation-for="Input.UserName" class="text-danger val_form"></span>
                                </div>
                                 <div class="col-md-12">
                                    <label asp-for="Input.Email"></label>
                                    <input asp-for="Input.Email" placeholder="Nhập email . . .">
                                    <span  asp-validation-for="Input.Email" class="text-danger val_form"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" placeholder="Nhập mật khẩu . . .">
                                    <span asp-validation-for="Input.Password" class="text-danger val_form"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" placeholder="Nhập lại mật khẩu . . .">
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger val_form"></span>
                                </div>
                                <div class="col-12 mt-4">
                                    <button type="submit" class="w-100 btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">Đăng ký</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
